<?xml version="1.0" encoding="UTF-8"?>
<!--
  When updating your version of GWT, you should also update this DTD reference,
  so that your app can take advantage of the latest GWT module capabilities.
-->
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.7.0//EN"
  "http://gwtproject.org/doctype/2.7.0/gwt-module.dtd">
<module rename-to='gwtpolymer'>
  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User'/>

  <!-- Inherit the default GWT style sheet.  You can change       -->
  <!-- the theme of your GWT application by uncommenting          -->
  <!-- any one of the following lines.                            -->
 <!--  <inherits name='com.google.gwt.user.theme.clean.Clean'/> -->
  <!-- <inherits name='com.google.gwt.user.theme.standard.Standard'/> -->
  <!-- <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
  <!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/>     -->

  <!-- Inherit the UiBinder module.                               -->
  <inherits name="com.google.gwt.uibinder.UiBinder"/>
  
  <!-- build permutations for OS -->
  <define-property name="polymer.agent.os" values="mac,linux,windows,unknown" />
  <property-provider name="polymer.agent.os"><![CDATA[
    var ua = $wnd.navigator.userAgent.toLowerCase();
    if (ua.indexOf("macintosh") != -1 || ua.indexOf("mac os x") != -1) {
      return "mac";
    }
    if (ua.indexOf("linux") != -1) {
      return "linux";
    }
    if (ua.indexOf("windows") != -1 || ua.indexOf("win32") != -1) {
      return "windows";
    }
    return "unknown";
  ]]></property-provider>

  <!-- Add more user agents and redefine how one is selected -->
  <define-property name="polymer.user.agent" values="ie8" />
  <extend-property name="polymer.user.agent" values="ie9" />
  <extend-property name="polymer.user.agent" values="ie10" />
  <extend-property name="polymer.user.agent" values="gecko1_8" />
  <extend-property name="polymer.user.agent" values="gecko1_9" />

  <extend-property name="polymer.user.agent" values="safari3" />
  <extend-property name="polymer.user.agent" values="safari4" />
  <extend-property name="polymer.user.agent" values="safari5" />
  <extend-property name="polymer.user.agent" values="chrome" />
  <extend-property name="polymer.user.agent" values="air" />

  <!-- Decide which user.agent setting to apply -->
  <property-provider name="polymer.user.agent" generator="mk.icelabs.gwt.polymer.client.core.UserAgentPropertyGenerator" />

  <!-- Restrict the permutation explosion -->
  <set-property name="user.agent" value="ie8">
    <when-property-is name="polymer.user.agent" value="ie8" />
  </set-property>
  <set-property name="user.agent" value="ie9">
    <when-property-is name="polymer.user.agent" value="ie9" />
  </set-property>
  <set-property name="user.agent" value="ie10">
    <when-property-is name="polymer.user.agent" value="ie10" />
  </set-property>
  <set-property name="user.agent" value="gecko1_8">
    <any>
      <when-property-is name="polymer.user.agent" value="gecko1_8" />
      <when-property-is name="polymer.user.agent" value="gecko1_9" />
    </any>
  </set-property>
  <set-property name="user.agent" value="safari">
    <any>
      <when-property-is name="polymer.user.agent" value="safari3" />
      <when-property-is name="polymer.user.agent" value="safari4" />
      <when-property-is name="polymer.user.agent" value="safari5" />
      <when-property-is name="polymer.user.agent" value="air" />
      <when-property-is name="polymer.user.agent" value="chrome" />
    </any>
  </set-property>

  <generate-with class="mk.icelabs.gwt.polymer.client.core.BindingPropertyGenerator">
    <when-type-assignable class="mk.icelabs.gwt.polymer.client.ui.BindingPropertySet" />
  </generate-with>
  


  <!-- Other module inherits                                      -->
  
  <!-- Specify the app entry point class.                        --> 
  <entry-point class='mk.icelabs.gwt.polymer.client.Gwtpolymer'/>


  <!-- Specify the paths for translatable code                    -->
  <source path='client'/>
  <source path='shared'/>

  <!-- allow Super Dev Mode -->
  <add-linker name="xsiframe"/>
</module>
